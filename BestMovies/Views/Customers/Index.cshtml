@model List<BestMovies.Models.Customers>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Customers</h2>
@if (Model.Count == 0)
{
    <div>We don't have any customers yet.</div>
}
else
{
    <table width="38%">
        <tr style="color:chartreuse">
            <td>Customer</td>
            <td>Membership Type</td>
        </tr>

        @foreach (var customer in Model)
        {
        <tr>
            <td>
                @Html.ActionLink(customer.FirstName + " " + customer.LastName, "Details", new { id = customer.CustomersId })
            </td>
            <td>
                @customer.MembershipType.Type
            </td>
        </tr>
        }
    </table>
}
